<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="youthstudio.com.kegelexercises">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="youthstudio.com.kegelexercises.ScrollingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="youthstudio.com.kegelexercises.ExerciseListActivity"
            android:label="@string/title_exercise_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="youthstudio.com.kegelexercises.ExerciseDetailActivity"
            android:label="@string/title_exercise_detail"
            android:parentActivityName="youthstudio.com.kegelexercises.ExerciseListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="youthstudio.com.kegelexercises.ExerciseListActivity" />
        </activity>
        <activity
            android:name="youthstudio.com.kegelexercises.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="youthstudio.com.kegelexercises.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name="youthstudio.com.kegelexercises.Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>